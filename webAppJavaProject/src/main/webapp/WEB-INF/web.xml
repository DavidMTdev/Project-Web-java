<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
	<display-name>Archetype Created Web Application</display-name>
	<servlet>
		<servlet-name>Index</servlet-name>
		<servlet-class>ynov.david.servlets.Index</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Index</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>Article</servlet-name>
		<servlet-class>ynov.david.servlets.Article</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Article</servlet-name>
		<url-pattern>/article/</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>Post</servlet-name>
		<servlet-class>ynov.david.servlets.Post</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Post</servlet-name>
		<url-pattern>/article/post/</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>Author</servlet-name>
		<servlet-class>ynov.david.servlets.Author</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Author</servlet-name>
		<url-pattern>/authors/</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>AddArticle</servlet-name>
		<servlet-class>ynov.david.servlets.AddArticle</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AddArticle</servlet-name>
		<url-pattern>/article/add/</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>UpdateArticle</servlet-name>
		<servlet-class>ynov.david.servlets.UpdateArticle</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UpdateArticle</servlet-name>
		<url-pattern>/article/admin/update/</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>DeleteArticle</servlet-name>
		<servlet-class>ynov.david.servlets.DeleteArticle</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DeleteArticle</servlet-name>
		<url-pattern>/article/admin/delete/</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>AdminArticle</servlet-name>
		<servlet-class>ynov.david.servlets.AdminArticle</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AdminArticle</servlet-name>
		<url-pattern>/article/admin/</url-pattern>
	</servlet-mapping>


	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
</web-app>